@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Categoria";
}



<div class="container">
    <div class="row">
        <h1>Ecco le nostre categorie </h1>
@foreach (var category in Model)
{
            <div class="col-md-4">
                <div class="card mb-4 rounded">
                    <img src="" class="card-img-top" alt="@category.CategoryName">
                    <div class="card-body">
                        
                    <p>@category.Description</p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" asp-action="Detail" asp-controller="Category" asp-route-id="@category.Id">Dettagli</a>
                
                </div>
                </div>
            </div>
             }